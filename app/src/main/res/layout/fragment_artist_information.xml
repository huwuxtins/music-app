<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.ArtistInformationFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/img_back"
           android:layout_width="73dp"
           android:layout_height="39dp"
           android:layout_marginTop="40dp"
           android:src="@drawable/back"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.047"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/image_artist"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_marginTop="24dp"
           android:src="@drawable/alan_walker"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.498"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

       </de.hdodenhof.circleimageview.CircleImageView>

       <TextView
           android:id="@+id/txt_nameArtist"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:text="ABC"
           android:textColor="@color/white"
           android:textSize="24dp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="@+id/image_artist"
           app:layout_constraintStart_toStartOf="@+id/image_artist"
           app:layout_constraintTop_toBottomOf="@+id/image_artist" />

       <TextView
           android:id="@+id/txt_followers"
           android:layout_width="177dp"
           android:layout_height="19dp"
           android:layout_marginStart="24dp"
           android:layout_marginTop="36dp"
           android:text="80000 followers"
           android:textColor="@color/white"
           android:textSize="14dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_nameArtist" />

       <Button
           android:id="@+id/btn_follow"
           android:layout_width="120dp"
           android:layout_height="47dp"
           android:layout_marginStart="20dp"
           android:backgroundTint="@color/white"
           android:foreground="?attr/selectableItemBackgroundBorderless"
           android:text="Follow"
           android:textColor="@color/black"
           android:textSize="14dp"
           app:layout_constraintBottom_toBottomOf="@+id/txt_followers"
           app:layout_constraintStart_toEndOf="@+id/txt_followers"
           app:layout_constraintTop_toTopOf="@+id/txt_followers" />

       <TextView
           android:id="@+id/information"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginTop="24dp"
           android:text="Information"
           android:textColor="@color/white"
           android:textSize="16dp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/line1" />

       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="92dp"
           android:layout_marginTop="16dp"
           android:text="Name"
           android:textColor="@color/white"
           android:textSize="14dp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/information" />

       <TextView
           android:id="@+id/nationArtist"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="60dp"
           android:text="US"
           android:textColor="@color/white"
           android:textSize="14dp"
           app:layout_constraintBottom_toBottomOf="@+id/nation"
           app:layout_constraintStart_toEndOf="@+id/nation"
           app:layout_constraintTop_toTopOf="@+id/nation" />

       <TextView
           android:id="@+id/bodArtist"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="36dp"
           android:text="01/02/1996"
           android:textColor="@color/white"
           android:textSize="14dp"
           app:layout_constraintBottom_toBottomOf="@+id/bod"
           app:layout_constraintStart_toEndOf="@+id/bod"
           app:layout_constraintTop_toTopOf="@+id/bod"
           app:layout_constraintVertical_bias="0.0" />

       <TextView
           android:id="@+id/nation"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:text="Nation"
           android:textColor="@color/white"
           android:textSize="14dp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="@+id/bod"
           app:layout_constraintStart_toStartOf="@+id/bod"
           app:layout_constraintTop_toBottomOf="@+id/bod" />

       <TextView
           android:id="@+id/nameArtist"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="60dp"
           android:text="Alan Walker"
           android:textColor="@color/white"
           android:textSize="14dp"
           app:layout_constraintBottom_toBottomOf="@+id/name"
           app:layout_constraintStart_toEndOf="@+id/name"
           app:layout_constraintTop_toTopOf="@+id/name" />

       <TextView
           android:id="@+id/bod"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:text="Date of birth"
           android:textColor="@color/white"
           android:textSize="14dp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="@+id/name"
           app:layout_constraintHorizontal_bias="0.488"
           app:layout_constraintStart_toStartOf="@+id/name"
           app:layout_constraintTop_toBottomOf="@+id/name" />

       <View
           android:id="@+id/line1"
           android:layout_width="405dp"
           android:layout_height="1dp"
           android:layout_marginTop="24dp"
           android:background="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_followers" />

       <View
           android:id="@+id/line2"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="16dp"
           android:background="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/nation" />

       <TextView
           android:id="@+id/story"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginTop="24dp"
           android:text="Story"
           android:textColor="@color/white"
           android:textSize="16dp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/line2" />

       <TextView
           android:id="@+id/storyArtist"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginTop="12dp"
           android:layout_marginEnd="10dp"
           android:text="Tieu su nghe si"
           android:textColor="@color/white"
           android:textSize="14dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/story" />

       <View
           android:id="@+id/line3"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/storyArtist" />

       <TextView
           android:id="@+id/songlist"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginTop="12dp"
           android:text="Song list"
           android:textColor="@color/white"
           android:textSize="16dp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/line3" />

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/listSongArtist"
           android:layout_width="match_parent"
           android:layout_height="350dp"
           android:layout_marginTop="24dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/songlist" />


   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>