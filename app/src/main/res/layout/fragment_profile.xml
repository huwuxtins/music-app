<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/background"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_circular"
                android:scaleType="centerCrop"
                android:src="@drawable/alan_walker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                android:text="Username"
                android:textSize="25sp"
                android:textColor="@color/text"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvMyPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvLibrary"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                android:text="username@gmail.com"
                android:textSize="15sp"
                android:textColor="#CCCCCC"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/icon_menu"
                android:backgroundTint="@color/background" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Thông tin tài khoản"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Chỉnh sửa"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_edit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Đổi mật khẩu"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_change" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Đăng xuất"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_logout" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your library"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Your favourite songs"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_heart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Your playlists"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_playlist" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Your history"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/icon_history" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>